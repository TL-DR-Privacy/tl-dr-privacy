{
    "manifest_version": 3,
    "name": "TL;DR Privacy Policy Summarizer",
    "version": "1.0.0",
    "description": "A web browser extension that summarizes privacy policies for convenient reading",
    "author": "EECS582 Group 1",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "action",
        "activeTab",
        "background",
        "contextMenus",
        "content_scripts",
        "downloads",
        "history",
        "notifications",
        "scripting",
        "storage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "16.png",
        "24": "24.png",
        "32": "32.png",
        "48": "48.png",
        "128": "128.png"
    },
}