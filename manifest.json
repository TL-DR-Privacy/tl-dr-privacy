{
    "manifest_version": 3,
    "name": "TL;DR Privacy Policy Summarizer",
    "version": "1.0.0",
    "description": "A web browser extension that summarizes privacy policies for convenient reading and access",
    "author": "EECS582 Group 1",
    "icons": {
        "16": "icons/16.png",
        "24": "icons/24.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "permisions": [
        "action",
        "activeTab",
        "background",
        "contextMenus",
        "content_scripts",
        "downloads",
        "history",
        "notifications",
        "scripting",
        "storage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": [*file for javascript*],
            "css": [*file for css to make pretty :)*]
        }
    ],
    "background": {
        "service_worker": *background script*
    },
    "action": {
        "default_popup": "index.html"
    }
}

# tl-dr-privacy
TL;DR Privacy is a browser extension to summarize website privacy policies.