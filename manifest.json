{
    "manifest_version": 3,
    "name": "TL;DR Privacy Policy Summarizer",
    "version": "1.0.0",
    "description": "A web browser extension that summarizes privacy policies for convenient reading",
    "author": "EECS582 Group 1",
    "icons": {
        "16": *image location*,
        "32": *image location*,
        "48": *image location*,
        "128": *image location*
    },
    "permisions": [
        "action",
        "activeTab",
        "background",
        "contextMenus",
        "content_scripts",
        "downloads",
        "history",
        "notifications",
        "scripting",
        "storage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking"
    ],
    "host_permissions": [
        "*://*/*"
    ]
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": [*file for javascript*],
            "css": [*file for css to make pretty :)*]
        }
    ],
    "background": {
        "service_worker": *background script*
    },
    "action": {
        "default_popup": *image/menu that popsup upon entering website*,
        "default_icon": *png image that appears upon entering website*
    }
}